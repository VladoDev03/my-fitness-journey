@model List<MyFitnessJourney.Web.Models.PersonalBest.PersonalBestViewModel>

<h1>@Model[0].Exercise</h1>

<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead style="background-color: #f2f2f2;">
        <tr>
            <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Weight (kg)</th>
            <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Date</th>
            <th style="padding: 10px; border: 1px solid #ddd; text-align: left;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding: 10px; border: 1px solid #ddd;">@item.Weight</td>
                <td style="padding: 10px; border: 1px solid #ddd;">@item.Date</td>
                <td style="padding: 10px; border: 1px solid #ddd;">
                    <a asp-action="Delete" asp-controller="PersonalBest" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
