@using MyFitnessJourney.Service.Models.Measure
@model MeasureServiceModel

@{
    ViewData["Title"] = "Add Measure";
}

<style>
    .measure-form-wrapper {
        max-width: 480px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
    }

        .measure-form-wrapper h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 700;
            color: #333;
        }

        .measure-form-wrapper .form-group {
            margin-bottom: 1.4rem;
        }

        .measure-form-wrapper label.control-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #222;
        }

        .measure-form-wrapper input.form-control {
            width: 100%;
            padding: 0.5rem 0.75rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 6px;
            transition: border-color 0.3s ease;
        }

            .measure-form-wrapper input.form-control:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 5px rgba(0,123,255,0.5);
            }

        .measure-form-wrapper .text-danger {
            font-size: 0.875rem;
            margin-top: 0.3rem;
            display: block;
            color: #d9534f;
        }

        .measure-form-wrapper .btn-primary {
            width: 100%;
            padding: 0.6rem 0;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 8px;
            background-color: #007bff;
            border: none;
            cursor: pointer;
            transition: background-color 0.25s ease;
        }

            .measure-form-wrapper .btn-primary:hover {
                background-color: #0056b3;
            }
</style>

<div class="measure-form-wrapper">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="BodyWeight" class="control-label"></label>
            <input asp-for="BodyWeight" class="form-control" />
            <span asp-validation-for="BodyWeight" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MeasureDate" class="control-label"></label>
            <input asp-for="MeasureDate" class="form-control" type="date" />
            <span asp-validation-for="MeasureDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
